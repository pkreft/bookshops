<!DOCTYPE html>
<html ng-app="bookshops">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bookshops{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('/assets/dest/css/app.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block javascripts %}
            <script src="{{ asset('/bower_components/angular/angular.min.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            <script src="{{ asset('/assets/dest/js/scripts.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <div class="col-sm-12">
            <div class="col-sm-offset-3 col-sm-6">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="{{ path('homepage') }}">Bookshops - WASG <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                {% block body %}{% endblock %}
            </div>
            <div class="col-sm-offset-1 col-sm-2">
                <div class="col-sm-offset-4 col-sm-8">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav">
                                    <li>
                                    {% if not app.user %}
                                        <a href="{{ path('login') }}">
                                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                            login
                                        </a>
                                    {% else %}
                                        <a>
                                            {{ app.user.username }}
                                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                        </a>
                                        <a href="{{ path('logout') }}">
                                            logout
                                            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                                        </a>
                                    {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </body>
</html>
